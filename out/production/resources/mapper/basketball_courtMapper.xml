<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace对应接口文件的全限定名-->
<!--具体来说就是mapper要实现哪个.java文件功能-->
<mapper namespace="com.hsk.dao.IBasketball_courtDao">
    <resultMap id="myMap" type="com.hsk.dto.Basketball_court">
        <result property="court_id" column="court_id"/>
        <result property="category_id" column="category_id"/>
        <result property="court_name" column="court_name"/>
        <result property="court_price" column="court_price"/>
    </resultMap>
    <sql id="fields">
        *
    </sql>
    <sql id="tablename">
        t_basketball_court
    </sql>
    <!--要实现的具体功能用mybatis的标签来标注-->
    <!--功能名称或方法名称，由id指定-->
    <!--Basketball_court findOneById(String court_id)    parameterType : 入参类型-->
    <!--实现按ID精确查询功能-->
    <select id="findOneById" parameterType="java.lang.String" resultMap="myMap">
        SELECT
        <include refid="fields"/>
        FROM
        <include refid="tablename"/>
        WHERE court_id = #{court_id}
    </select>

    <!--实现按参数精确查询功能-->
    <!--T findOneByProp(Map map);-->
    <select id="findOneByProp" parameterType="java.util.Map" resultMap="myMap">
        SELECT
        <include refid="fields"/>
        FROM
        <include refid="tablename"/>
        -- 动态sql
        <where>
            <if test="court_id!=null">
                id LIKE concat(concat('%',#{court_id}),'%')
            </if>
            <if test="category_id!=null">
                category_id LIKE concat(concat('%',#{category_id}),'%')
            </if>
            <if test="court_name!=null">
                court_name LIKE concat(concat('%',#{court_name}),'%')
            </if>
            <if test="court_price!=null">
                court_price LIKE concat(concat('%',#{court_price}),'%')
            </if>
        </where>
    </select>

    <select id="findByProp" parameterType="java.util.Map" resultMap="myMap">
        SELECT
        <include refid="fields"/>
        FROM
        <include refid="tablename"/>
        <where>
            <if test="court_id!=null">
                court_id LIKE concat(concat('%',#{court_id}),'%')
            </if>
            <if test="category_id!=null">
                AND category_id LIKE concat(concat('%',#{category_id}),'%')
            </if>
            <if test="court_name!=null">
                AND court_name LIKE concat(concat('%',#{court_name}),'%')
            </if>
            <if test="court_price!=null">
                AND court_price LIKE concat(concat('%',#{court_price}),'%')
            </if>
        </where>
    </select>

    <!--boolean add(Basketball_court t)-->
    <!--insert into basketball_court(category_id,court_name,court_price) values(?,?,?)-->
    <insert id="add" parameterType="com.hsk.dto.Basketball_court">
        INSERT INTO
        <include refid="tablename"/>
        --         对表的字段进行拼接
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="category_id!=null">
                category_id,
            </if>
            <if test="court_name!=null">
                court_name,
            </if>
            <if test="court_price!=null">
                court_price,
            </if>
        </trim>
        --         对要插入的值进行拼接
        <trim prefix=" values(" suffix=")" suffixOverrides=",">
            <if test="category_id!=null">
                #{category_id},
            </if>
            <if test="court_name!=null">
                #{court_name},
            </if>
            <if test="court_price!=null">
                #{court_price},
            </if>
        </trim>
    </insert>

    <!--修改功能-->
    <!--boolean update(T t);-->
    <!--update basketball_court set category_id=?,court_name=?,court_price=? where court_id=?-->
    <update id="update" parameterType="com.hsk.dto.Basketball_court">
        UPDATE
        <include refid="tablename"/>
        <set>
            <if test="category_id!=null">
                category_id=#{category_id},
            </if>
            <if test="court_name!=null">
                court_name=#{court_name},
            </if>
            <if test="court_price!=null">
                court_price=#{court_price},
            </if>
        </set>
        WHERE court_id=#{court_id}
    </update>

    <!--删除功能-->
    <!--boolean delete(T t);-->
    <!--delete t_basketball_court where court_id=?-->
    <delete id="delete" parameterType="com.hsk.dto.Basketball_court">
        DELETE
        FROM
        <include refid="tablename"/>
        WHERE court_id=#{court_id}
    </delete>
</mapper>